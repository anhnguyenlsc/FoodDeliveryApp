<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB8E0E"
    tools:context=".Input_phonenumber">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_login_circle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="100dp"
        app:cardBackgroundColor="#EB8E0E"
        app:cardCornerRadius="150dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="343dp"
            android:layout_height="343dp"
            android:layout_marginLeft="-47dp"
            android:layout_marginTop="-47dp"
            app:srcCompat="@drawable/login_circle" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_imme_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="136dp"
        android:fontFamily="@font/bmdaniel_bold"
        android:text="IMMEDELI CHÀO BẠN"
        android:textColor="#FFFFFF"
        android:textSize="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_login_circle" />

    <TextView
        android:id="@+id/tv_inputphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="30dp"
        android:text="Nhập số điện thoại của bạn để tiếp tục nhé!"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_imme_title" />

    <EditText
        android:id="@+id/edt_inputphone"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border_rad"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_inputphone" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:textColor="#F60C0C"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_inputphone" />

    <TextView
        android:id="@+id/tv_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="30dp"
        android:text="Để sau nha, mình muốn xem thêm chút nữa!"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_inputphone" />

    <ImageView
        android:id="@+id/img_feet"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_later"
        app:layout_constraintTop_toBottomOf="@+id/edt_inputphone"
        app:srcCompat="@drawable/feet" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_banner_end"
        android:layout_width="305dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_later" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/banner_login" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
